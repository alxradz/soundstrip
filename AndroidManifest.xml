<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hyperscalelogic.soundstrip"
          android:versionCode="1"
          android:versionName="1.0">

  <uses-sdk
      android:minSdkVersion="14"
      android:targetSdkVersion="17"
      android:maxSdkVersion="17"/>

  <application
      android:label="@string/app_name"
      android:icon="@drawable/ic_launcher"
      >

    <activity
        android:name="com.hyperscalelogic.soundstrip.activity.MainActivity">

      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>

    </activity>

    <activity
        android:name="com.hyperscalelogic.soundstrip.activity.AlbumListActivity"
        android:label="@string/album_list">

      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="com.hyperscalelogic.soundstrip.activity.MainActivity"/>

    </activity>

  </application>

</manifest>
